# =============================================================================
# Distributed AI Agent League System - Environment Configuration
# =============================================================================
# Copy this file to .env and modify as needed.
# All values shown are defaults used when environment variables are not set.
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Ports for each agent service
LEAGUE_MANAGER_PORT=8000
REFEREE_PORT=8001
PLAYER_PORT_START=8101

# Host bindings (use 0.0.0.0 for external access, 127.0.0.1 for localhost only)
HOST_BIND=0.0.0.0

# -----------------------------------------------------------------------------
# Ollama / LLM Configuration
# -----------------------------------------------------------------------------
# Ollama server URL (default assumes local installation)
OLLAMA_BASE_URL=http://localhost:11434

# Default model for LLM strategy
# Options: llama3, mistral, phi3, codellama, etc.
OLLAMA_MODEL=llama3

# LLM inference parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=100
LLM_TIMEOUT=3.0

# -----------------------------------------------------------------------------
# Game Configuration
# -----------------------------------------------------------------------------
# Maximum rounds per match
MAX_ROUNDS_PER_MATCH=10

# Random number range for parity game
RANDOM_NUMBER_MIN=1
RANDOM_NUMBER_MAX=10

# Move timeout in milliseconds
MOVE_TIMEOUT=2000

# Match timeout in seconds
MATCH_TIMEOUT=30.0

# -----------------------------------------------------------------------------
# Tournament Configuration
# -----------------------------------------------------------------------------
# Enable round-robin scheduling
ROUND_ROBIN_SCHEDULING=true

# Maximum concurrent matches
MAX_CONCURRENT_MATCHES=4

# Match cleanup delay in seconds
MATCH_CLEANUP_DELAY=1.0

# -----------------------------------------------------------------------------
# Retry & Circuit Breaker Configuration
# -----------------------------------------------------------------------------
# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Circuit breaker threshold (failures before opening)
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker reset time in seconds
CIRCUIT_BREAKER_RESET_TIME=30.0

# Exponential backoff base (seconds)
EXPONENTIAL_BACKOFF_BASE=2.0

# Jitter range for backoff randomization
JITTER_RANGE=0.5

# -----------------------------------------------------------------------------
# HTTP Client Configuration
# -----------------------------------------------------------------------------
# Connection timeout in seconds
HTTP_CONNECT_TIMEOUT=1.5

# Read timeout in seconds
HTTP_READ_TIMEOUT=2.0

# Total request timeout in seconds
HTTP_TOTAL_TIMEOUT=3.0

# Connection pool settings
MAX_CONNECTIONS=20
MAX_KEEPALIVE=10

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable JSON structured logging
JSON_LOG_FORMAT=true

# Include request IDs in logs
LOG_REQUEST_IDS=true

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable debug mode (more verbose logging, auto-reload)
DEBUG=false

# Enable CORS for all origins (set to false in production)
CORS_ALLOW_ALL=true
